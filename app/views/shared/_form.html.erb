<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <%= simple_form_for @post do |f| %>
        <h2><%= f.input :title, placeholder: true %></h2>
        <%= f.input :content, input_html: { rows: 20 } %>
        <%= f.submit "Public", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>