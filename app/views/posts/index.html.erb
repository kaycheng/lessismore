<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1"> 
      <h1 class="text-center">Stay Hungry, Stay Foolish</h1>
      <br>

      <%= link_to "PROFILE", user_path(@user) %>

      <% @posts.each do |post| %>
        <!-- For posts -->
        <div class="col-12 col-md-10">
          
          <h2><%= post.title %></h2>
          <p class="text-muted">
            <%= post.created_at.strftime("%Y-%m-%d") %>
          </p>
          <%= image_tag post.image if post.image? %>
          <p><%= truncate(post.content, length: 500) %></p>
          <%= link_to "閱讀全文", post_path(post), class: "btn btn-secondary" %> 
          <hr class="index-hr" /> 
          
        
        </div>

        <!-- For categories -->
        <div class="col-12 col-md-2">

        </div>
      <% end %>

    </div>
  </div>
</div>
