<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1">
      <h2 class="text-center"><%= @post.title %></h2>
      <p class="text-muted text-right">
        <%= @post.created_at.strftime("%Y-%m-%d") %> 
      </p>
      <p><%= @post.user.name %></p>
      <p><%= simple_format(@post.content) %></p>
    </div>
  </div>
</div>
