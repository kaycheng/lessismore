<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1">
      <h2><%= @post.title %></h2>
      <p class="text-muted">
        <%= @post.created_at.strftime("%Y-%m-%d") %> |
        <%= link_to "Delete", admin_post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %> 
      </p>
      <p><%= @post.user.name %></p>
      <p><%= simple_format @post.content %></p>
    </div>
  </div>
</div>