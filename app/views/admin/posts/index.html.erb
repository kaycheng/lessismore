<%= render partial: "shared/navigation" %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 offset-md-1"> 
      <h1 class="text-center">後台</h1>

      <%= link_to "新文章", new_admin_post_path, class: "btn btn-info" %> 

      <% @posts.each do |post| %>
        <h2><%= post.title %></h2>
        <p class="text-muted">
          <%= post.created_at.strftime("%Y-%m-%d") %> |
          <%= link_to "Edit", edit_admin_post_path(post) %> |
          <%= link_to "Delete", admin_post_path(post), method: :delete, data: {confirm: "Are you sure?"} %>
        </p>
        <p>
          <%= truncate(post.content, length: 300) %>
          <%= link_to "閱讀全文", admin_post_path(post) %>
        </p>
      <% end %>
    </div>
  </div>
</div>



