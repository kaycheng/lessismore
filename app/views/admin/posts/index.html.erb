<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <h1 class="text-center">後台</h1>
    
      <% @posts.each do |post| %>
        <h2><%= post.title %></h2>
        <p class="text-muted">
          <%= post.created_at.strftime("%Y-%m-%d") %>
          
        </p>
        <p>
          <%= truncate(post.content, length: 300) %>
          <%= link_to "閱讀全文", admin_post_path(post) %>
        </p>
      <% end %>
    </div>
  </div>
</div>



